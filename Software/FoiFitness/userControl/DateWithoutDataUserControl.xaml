<UserControl x:Class="FoiFitness.userControl.DateWithoutDataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoiFitness.userControl"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200">
    <Grid Background="#131944">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="lbDateTitle" Text="Title" HorizontalAlignment="Center" Grid.Row="0" Background="Transparent" Foreground="White" FontSize="22" FontWeight="Bold"/>
        <Label Background="Transparent" Foreground="White" Content="There is nothing scheduled" Grid.Row="1" HorizontalAlignment="Center"/>
        <Label Background="Transparent" Foreground="White" Content="for this day!" Grid.Row="2" HorizontalAlignment="Center"/>
        <Label Background="Transparent" Foreground="White" Content="Generate plan or modify calories." Grid.Row="3" HorizontalAlignment="Center"/>
        <Button x:Name="btnModifyCalories" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0" Height="25" Width="150" Content="Modify calories" Click="btnModifyCalories_Click" Background="#0B23D1" Foreground="White" FontWeight="Bold" FontSize="16"/>
    </Grid>
</UserControl>
