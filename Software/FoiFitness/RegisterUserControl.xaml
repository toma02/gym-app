<UserControl x:Name="userControlRegister" x:Class="FoiFitness.RegisterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoiFitness"
             mc:Ignorable="d" d:DesignWidth="800" Height="854" Loaded="userControlRegister_Loaded">


    <StackPanel Background="#131944" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Padding="25">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#131944">
                

                <Label HorizontalAlignment="Center" Content="Registration" Foreground="White" FontSize="35" Padding="50,10,50,40" FontWeight="Bold"></Label>

                <Label Content="First name:" Foreground="white" FontSize="18" Padding="0,5,0,5"/>
                <TextBox x:Name="txtFirstName"  MinWidth="200" Padding="8" LostFocus="txtFirstName_LostFocus"/>
                <Label x:Name="errorFirstName" Foreground="Red" Content="test" Padding="0" Visibility="Hidden"></Label>

                <Label Content="Last name:"  Foreground="white" FontSize="18" Padding="0,5,0,5"/>
                <TextBox x:Name="txtLastName" Padding="8" LostFocus="txtLastName_LostFocus" />
                <Label x:Name="errorLastName" Foreground="Red" Content="test" Padding="0" Visibility="Hidden"></Label>

                <Label Content="Username:" Foreground="white" FontSize="18" Padding="0,5,0,5"/>
                <TextBox x:Name="txtUsername" Padding="8" LostFocus="txtUsername_LostFocus" />
                <Label x:Name="errorUsername" Foreground="Red" Content="test" Padding="0" Visibility="Hidden"></Label>

                <Label Content="Email:" Foreground="white" FontSize="18" Padding="0,5,0,5"/>
                <TextBox x:Name="txtEmail" Padding="8" LostFocus="txtEmail_LostFocus" />
                <Label x:Name="errorEmail" Foreground="Red" Content="test" Padding="0" Visibility="Hidden"></Label>

                <Label Content="Password:" Foreground="white" FontSize="18" Padding="0,5,0,5"/>
                <PasswordBox x:Name="txtPassword" Padding="8" LostFocus="txtPassword_LostFocus" />
                <Label x:Name="errorPassword" Foreground="Red" Content="test" Padding="0" Visibility="Hidden" Margin="0,0,0,30"></Label>


                <Button Content="Register" Name="registerButton" Background="#0B23D1" Foreground="White" FontSize="18" FontWeight="Bold" Click="registerButton_Click" Padding="10" />
                <Label x:Name="errorDatabase" Foreground="Red" Content="test" Padding="0" Visibility="Hidden"></Label>

                <Button Content="Login" Name="btnGoToLogin" Background="Transparent" Foreground="White" Click="btnGoToLogin_Click"/>
            </StackPanel>
        </Border>
    </StackPanel>

    
</UserControl>
