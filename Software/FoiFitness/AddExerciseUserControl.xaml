<UserControl x:Class="FoiFitness.AddExerciseUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoiFitness"
             mc:Ignorable="d" 
             d:DesignHeight="607" d:DesignWidth="450" Loaded="UserControl_Loaded">
    
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#131944">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Add exercise" Foreground="White" FontSize="35" ></Label>

        
        <Label Grid.Row="1" Grid.Column="0" Content="Exericse name:" Margin="10" Foreground="white" FontSize="18"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtName"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Exercise description:" Margin="10" Foreground="white" FontSize="18"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtDesc"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Exercise video:" Margin="10" Foreground="white" FontSize="18"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLink"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Exercise difficulty:" Margin="10" Foreground="white" FontSize="18"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtDiff"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>
        
        <Label Grid.Row="5" Grid.Column="0" Content="Body part:" Margin="10" Foreground="white" FontSize="18"/>
        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="cmbBody"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>
        
        <Label Grid.Row="6" Grid.Column="0" Content="Equipment:" Margin="10" Foreground="white" FontSize="18"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cmbEquip"  MinWidth="200" Padding="10" Margin="0,10,10,0"/>

        <Button Grid.Row="7" Grid.Column="0" Content="Cancel" x:Name="btnCancel" Margin="10" FontSize="18" Width="75" Click="btnCancel_Click"></Button>
        <Button Grid.Row="7" Grid.Column="2" Content="Save" x:Name="btnSave" Margin="10" FontSize="18" Width="75" Click="btnSave_Click"></Button>
        
    </Grid>
</UserControl>
