<Window x:Class="FoiFitness.ShowExcerciseInfoControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoiFitness"
        mc:Ignorable="d"
        Title="Excercise info" Height="450" Width="800" Loaded="Window_Loaded" Background="#090C22">
    <StackPanel Margin="20" Background="#131944">
        <TextBlock x:Name="tbExcerciseName" FontSize="22" FontWeight="Bold" Foreground="White" Text="Vjezba" Margin="20,20,20,0"></TextBlock>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Margin="20">
                <Image x:Name="imgExcercise" Source="https://i.postimg.cc/BvQM634F/o-UM4-CHGCEEMzd-SUht-BQF9-C.jpg" MaxHeight="200" MaxWidth="300" Stretch="UniformToFill"></Image>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Margin="20">
                <TextBlock Margin="10,0,10,10" Text="Difficulty:" TextDecorations="Underline" FontSize="16" Foreground="White"></TextBlock>
                <TextBlock x:Name="tbExcerciseDifficulty" Margin="10,0,10,0" Text="1" Foreground="White"></TextBlock>
                <TextBlock Margin="10" Text="Body part:" TextDecorations="Underline" FontSize="16" Foreground="White"></TextBlock>
                <TextBlock x:Name="tbExcerciseBodyPart" Margin="10,0,10,0" Text="Chest" Foreground="White"></TextBlock>
                <TextBlock Margin="10" Text="Equipment:" TextDecorations="Underline" FontSize="16" Foreground="White"></TextBlock>
                <TextBlock x:Name="tbExcerciseEquipment" Margin="10,0,10,0" Text="Machine" Foreground="White"></TextBlock>
                <TextBlock Margin="10" Text="Video link:" TextDecorations="Underline" FontSize="16" Foreground="White"></TextBlock>
                <TextBlock x:Name="tbExcerciseVideoLink" Margin="10,0,10,0" Foreground="White">
                    <Hyperlink x:Name="hlVideoLink" NavigateUri="https://www.example.com" RequestNavigate="hlVideoLink_RequestNavigate">Click here</Hyperlink>
                </TextBlock>
            </StackPanel>
        </DockPanel>
        <TextBlock Margin="15,5,20,0" Text="Description" FontSize="16" Foreground="White"></TextBlock>
        <TextBlock x:Name="tbExcerciseDescription" Margin="15,5,20,0" Text="Ovako se vjezba" Foreground="White"></TextBlock>
    </StackPanel>
</Window>
