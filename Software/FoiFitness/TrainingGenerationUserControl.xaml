<UserControl x:Class="FoiFitness.TrainingGenerationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoiFitness"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#131944">
        <Border Padding="20">
            <StackPanel>
                <Label Content="Training for you" Foreground="White" Padding="0,10,10,10" FontSize="20" FontWeight="Bold"/>
                <Label Content="A generated training plan based on your preferences" Foreground="White" Padding="0,10,10,10"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnAutoGeneratePlan" Content="Generate automatically" Background="#0B23D1" Foreground="White" Padding="8" BorderThickness="0" Margin="0,0,20,0" Click="btnAutoGeneratePlan_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </StackPanel>
</UserControl>
