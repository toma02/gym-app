<UserControl x:Class="FoiFitness.StartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoiFitness"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="#131944" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Padding="30">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="FoiFitness" Foreground="White" FontSize="35" FontWeight="Black" Height="150"></Label>
                <Button Content="Register" Name="registerButton" Margin="10" Background="#0B23D1" Foreground="White" FontSize="18" FontWeight="Bold" Click="registerButton_Click" Padding="5" Width="200"/>
                <Button Content="Login" Name="loginButton" Margin="10" Background="#0B23D1" Foreground="White" FontSize="18" FontWeight="Bold" Click="loginButton_Click" Padding="5" Width="200"/>
            </StackPanel>
        </Border>
        
    </StackPanel>
        
    
</UserControl>
